{
    "meta":{
        "version": "v1",
        "app_name": "Recipes_and_Ingredients",
        "log_prefix": "recipes_and_ingredients"
    },
    "database": {
        "pool": {
            "name": "recipes_and_ingredients_db_bool",
            "size": 10,
            "reset_session": true
        },
        "connection":{
            "config":{
                "database": "recipes_and_ingredients",
                "user": "recipes_and_ingredients_user",
                "host": "localhost",
                "port": 3306
            }
        }
    },

    "features": {
        "enable_course_recommendations": true,
        "enable_progress_tracking": true,
        "enable_certification_management": false
    },
    "ui_settings": {
        "theme": "light",
        "items_per_page": 20,
        "show_tutorials_on_startup": true
    }
}

